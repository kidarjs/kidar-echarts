{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": ".",
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "declaration": true,
    "declarationDir": ".",
    "allowSyntheticDefaultImports": true
  },
  "exclude": [
    "node_modules",
    "asset",
    "geojson"
  ],
  "include": [
    "*.ts"
  ]
}